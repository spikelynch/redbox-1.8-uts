{
	"indexer": {
        "type": "solr",
        "properties": "TF-OBJ-META",
        "useCache": true,
        "buffer": {
            "docLimit": "200",
            "sizeLimit": "204800",
            "timeLimit": "30"
        },
        "solr": {
            "uri": "http://localhost:${jetty.port}/solr/fascinator",
            "coreName": "fascinator",
            "autocommit": false,
            "embedded": false
        },
        "anotar": {
            "uri": "http://localhost:${jetty.port}/solr/anotar",
            "coreName": "anotar",
            "autocommit": true
        },
        "eventLog": {
            "uri": "http://localhost:${jetty.port}/solr/eventlog",
            "coreName": "eventlog",
            "autocommit": false,
            "embedded": false
        }
    }
}